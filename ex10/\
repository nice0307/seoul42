#include <stdio.h>
#include <string.h>

unsigned int	*ft_strlcpy(char *dest, char *src, unsigned int size);

int main(){
	char dest[10] = {0};
	char *src = "Salut!!";
	//int	srcc[5] = {1,2,3,4,5};
	//int n = sizeof(dest);
	//ft_strlcpy(dest, src, 4);
	//printf("%s", ft_strlcpy(dest, src, 4));
	printf("%ls!", ft_strlcpy(dest, src, 4));
}

unsigned int	*ft_strlcpy(char *dest, char *src, unsigned int size)
{
	unsigned int	i;
	unsigned int	val;
	//	char		destt[10];

	i = 0;
	while (i < size - 1)
	{
		dest[i] = src[i];
		i++;
	}
	dest[size - 1] = '\0';
	val = sizeof(dest);
	printf("%s", dest);
	printf("%u", val);
	return (0);
}

